.socials {
    display: flex;
}
.socials__link {
    width: 28px;
    height: 27px;
    display: block;
}

.socials__icon {
    width: 100%;
    height: 100%;
    fill: #464d62;

    &:hover {
        fill: #5500f2;
    }
}

.socials__item {
    margin-right: 40px;

    &:last-child {
        margin-right: 0;
    }
}

@media screen and (max-width: $bp-desktop) {
    .socials__item {
        margin-right: 46px;
    }
}
