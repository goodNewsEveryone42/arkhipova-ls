.footer-socials {
    display: flex;
}
.footer-socials__link {
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
    border: 1px solid #494b50;
    border-radius: 50%;

    .footer-socials__icon {
        width: 50%;
        height: 50%;
        fill: #494b50;
    }
    
    &:hover {
        border: 1px solid #5500f2;
    }

    &:hover > .footer-socials__icon {
        fill: #5500f2;
    }
}

