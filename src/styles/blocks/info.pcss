.info__table td:nth-child(1) {
    font-size: 16px;
    line-height: 30px;
    opacity: 0.3;
}

.info__table td:nth-child(2) {
    font-size: 16px;
    line-height: 30px;
    font-weight: 600;
}

.info {
    width: 349px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.info-img {
    margin-bottom: 69px;
}

.info__table {
    width: 100%;
    height: 115px;
}

.info__table td {
    width: 50%;
    vertical-align: center;
}