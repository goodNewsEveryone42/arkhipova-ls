@mixin desktopHd() {
  @media screen and (max-width: $bp-desktop-hd) {
    @content;
  }
}

@mixin desktop() {
  @media screen and (max-width: $bp-desktop) {
    @content;
  }
}

@mixin tablets() {
  @media screen and (min-width: $bp-tablets) and (max-width: 1199px) {
    @content;
  }
}

@mixin phones() {
  @media screen and (min-width: 320px)  {
    @content;
  }
}