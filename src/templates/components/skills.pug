script(type="text/x-template")#skills-list
  .skills__frontend-workflow
    .skills__wrapper
      .skills__item(v-for="category in skills" :key="category.title")
        skills-row(
          :category = "category"
        )

script(type="text/x-template")#skills-row
  .skills-row
    .skills-row__title {{category.title}}
    .skills-row__list
      .skills-row__item(v-for="skill in category.skills" :key="skill.id")
        skill(
          :skill = "skill"
        )

script(type="text/x-template")#skill
  .skill__item
      svg(viewBox="0 0 200 200").skill__circle-shape
        circle(cx="100" cy="100" r="83" fill="transparent" stroke="#e9e9e9" stroke-width="13px").skill__circle-under
        circle( cx="100" cy="100" r="83" ref="circle" fill="transparent" stroke="url(#gradient)" stroke-width="25px" stroke-dasharray="502.4" stroke-dashoffset="372").skill__circle-above
      svg(style="width:0; height:0; position: absolute;" aria-hidden="true")
        linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
          stop(offset="0%" stop-color='#4a00ed')
          stop(offset="100%" stop-color='#9300e8')
      .skill__circle-text {{skill.title}}

