script(type="text/x-template")#skills-list
  .skills__frontend
    h3.skills__frontend-title Front-end
    .frontend
      each tech in ["HTML5", "CSS3", "Javascript", "Jquery Ð¸ Vue.js"]
        .frontend__item
          svg(viewBox="0 0 200 200")
            circle(cx="100" cy="100" r="83" fill="transparent" stroke="#e9e9e9" stroke-width="13px")
            circle( cx="100" cy="100" r="83" fill="transparent" stroke="url(#gradient)" stroke-width="25px" stroke-dasharray="502.4" stroke-dashoffset="372")
          svg(style="width:0; height:0; position: absolute;" aria-hidden="true")
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
              stop(offset="0%" stop-color='#4a00ed')
              stop(offset="100%" stop-color='#9300e8')
          .frontend__item-title #{tech}
    .skills__workflow
      h3.skills__workflow-title Workflow
      .workflow
        each tech in ["GIT", "Terminal", "Gulp","Webpack"]
          .workflow__item
            svg(viewBox="0 0 200 200")
              circle(cx="100" cy="100" r="80" fill="transparent" stroke="#e9e9e9" stroke-width="13px")
              circle( cx="100" cy="100" r="80" fill="transparent" stroke="url(#gradient)" stroke-width="25px" stroke-dasharray="502.4" stroke-dashoffset="439")
            svg(style="width:0; height:0; position: absolute;" aria-hidden="true")
              linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
                stop(offset="0%" stop-color='#4a00ed')
                stop(offset="100%" stop-color='#9300e8')
            .workflow__item-title #{tech}