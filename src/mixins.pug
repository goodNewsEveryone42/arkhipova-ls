mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, alt, width, height)
  img(src=require(`images/${path}`) class=className  alt=alt  width=width height=height)

mixin picture(path)
  picture
    source(srcset=require(`images/content/${path}`))