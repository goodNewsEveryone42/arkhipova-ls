  .about-me__wrap-title {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    margin-bottom: 50px;
  }

  .about-me__bth-add-group {
    margin-left: -50px;
  }

  .about-me__bth-add-group::before {
    top: 9px;
    left: 50px;
  }

  .group-skills {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .skill-item {
    width: 100%;
    display: flex;
    justify-content: center;
    background-color: #ffffff;
