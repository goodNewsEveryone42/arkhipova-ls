  margin-right: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #dee4ed;
  border: 1px dashed #000000;

  p {
    line-height: 30px;
    font-weight: 600;
    opacity: 0.5;
    text-align: center;
    margin-bottom: 32px;
  }

  input {
    display: none;
  }

  label {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 182px;
    height: 52px;
    background: linear-gradient(to right, #2664e4, #443acc);
    border-radius: 40px;
    opacity: 1;

    span {
      font-size: 16px;
      line-height: 48px;
      text-transform: uppercase;
      color: #ffffff;
    }
  }
}

.edit-work__form-text {
  display: flex;
  flex-direction: column;
  width: 49%;

  label {
    margin-bottom: 10px;
  }

  input {
    height: 37px;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #000000;
  }

  input:nth-of-type(1) {
    margin-bottom: 30px;
  }

  input:nth-of-type(2) {
    margin-bottom: 28px;
  }

  textarea {
    height: 146px;
    margin-bottom: 27px;
    border: 1px solid #d9dbe0;
  }

  input:nth-of-type(3) {
    margin-bottom: 20px;
  }
}

.list-tag {
  display: flex;

  li {
    font-size: 13px;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 15px;
    padding-right: 10px;
    height: 30px;
    background-color: #f4f4f4;
    border-radius: 20px;
    margin-right: 5px;
  }

  button {
    font-weight: 600;
  }
}

.edit-work__btn-wrap {
  display: flex;
  justify-content: flex-end;
  margin-top: 40px;
  margin-bottom: 30px;

  button:nth-of-type(1) {
    font-size: 16px;
    line-height: 34px;
    font-weight: 600;
    color: #383bcf;
  }

  button:nth-of-type(2) {
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    width: 180px;
    height: 60px;
    background: linear-gradient(to right, #2664e4, #443acc);
    border-radius: 40px;
    margin-left: 53px;
  }
}

.add-work__new-work {
