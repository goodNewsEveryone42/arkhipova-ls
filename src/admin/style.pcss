body {
    font-family: 'Open Sans', Helvetica, sans-serif;
    font-size: 16px;
    line-height: 1.42;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: #414c63;
    background-color: #f8fafe;
    margin: 0;
  }

body,
html {
  height: 100%;
}
  
.container {
  margin: 0 auto;
  max-width: 1200px;
  width: 90%;
}

img {
  width: 100%;
  height: 100%;
}

button {
  border: 0;
  cursor: pointer;
}

* {
  box-sizing: border-box;
}

ul {
  padding: 0;
  margin: 0;
  list-style: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: normal;
  margin: 0;
}

p {
  margin: 0;
  padding: 0;
}

button[type="button"] {
  cursor: pointer;
  background-color: transparent;
}

a {
  color: inherit;
  cursor: pointer;
  text-decoration: none;
}

img,
source {
  display: block;
  max-width: 100%;
  max-height: 100%;
}

svg {
  display: block;
  width: 100%;
  height: auto;
}

.header-container {
  background-color: #424267;
}

.header {
  padding-top: 15px;
  padding-bottom: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;

  p,
  a {
    color: #ffffff;
  }
}

  .header__name-develops {
    font-size: 18px;
    line-height: 34px;
    font-weight: 600;
  }

  .header__name-page {
    font-size: 14px;
    line-height: 34px;
    opacity: 0.5;
  }

  .header__link-out {
    line-height: 34px;
    text-decoration: underline;
  }

  .header__img-container {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    overflow: hidden;
  }

  .header__description {
    width: 100%;
    margin-left: 23px;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .header__name-panel {
    width: 415px;
    display: flex;
    justify-content: space-between;
    align-items: inherit;
  }


.tabs-container {
  background-color: #ffffff;
}

.tabs {
  display: flex;
}

.tabs__link {
  line-height: 36px;
  display: block;
  padding-top: 20px;
  padding-bottom: 17px;
  padding-left: 27px;
  padding-right: 32px;
}

.tabs__link--active {
  color: #383bcf;
  border-bottom: 3px solid #383bcf;
}

.about-me {
  padding-top: 50px;
}

.about-me__wrap-title {
  width: 411px;
  display: flex;
  justify-content: space-between;
  margin-bottom: 50px;
}

.about-me__bth-add-group {
  position: relative;
  font-size: 16px;
  line-height: 34px;
  font-weight: 600;
  color: #383bcf;
}

.about-me__bth-add-group::before {
  content: "+";
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-weight: 400;
  width: 20px;
  height: 20px;
  top: 9px;
  left: -31px;
  background: linear-gradient(to right, #2664e4, #443acc);
  border-radius: 50%;
}

.content-container__title {
  font-size: 21px;
  line-height: 34px;
  font-weight: 700;
}

.content-container__block-title {
  font-size: 18px;
  line-height: 34px;
  font-weight: 700;
}

.group-skills {
  display: flex;
  justify-content: space-between;
}

.form-group__name-group input::placeholder {
  font-size: 18px;
  line-height: 34px;
}

.form-group__skills input::placeholder {
  font-size: 16px;
}

.form-group__name-group input {
  width: 278px;
  height: 41px;
  margin-bottom: 13px;
  background-color: transparent;
  border: none;
  border-bottom: 1px solid #000000;
}

.form-group__name-group {
  margin-bottom: 16px;
  border-bottom: 1px solid #d9dbe0;
}

.form-group__input-wrap {
  padding-left: 10px;
  padding-right: 10px;
}

.form-group__input-container {
  display: flex;
  justify-content: space-between;

  label {
    display: none;
  }
}

.form-group__btn {
  display: flex;
  justify-content: space-between;
  margin-top: 5px;

  button:nth-of-type(1) {
    width: 30px;
    height: 30px;
    fill: #00d70a;
    margin-right: 5px;
  }

  button:nth-of-type(2) {
    width: 25px;
    height: 30px;
    fill: #bf2929;
    margin-right: -5px;
  }
}

.form-group__table {
  margin-bottom: 56px;
  tr {
    height: 39px;
  }

  td:nth-child(1) {
    width: 300px;
  }

  td:nth-child(2) {
    width: 100px;
  }

  button {
    background-color: transparent;
  }

  .btn-pencil {
    width: 25px;
    height: 25px;
    fill: #a0a5b1;
  }

  .btn-trash {
    width: 27px;
    height: 27px;
    fill: #a0a5b1;
  }
}

.form-group__skills {
  display: flex;
  justify-content: flex-end;
  // width: 100%;
  padding-bottom: 35px;

  .form-group__skills-wrap {
    display: flex;
    justify-content: flex-end;
  }

  input::placeholder {
    padding-left: 20px;
  }

  input:nth-of-type(1) {
    width: 53%;
    height: 41px;
    margin-right: 12px;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #000000;
  }

  input:nth-of-type(2) {
    width: 17%;
    margin-right: 30px;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #000000;
  }

  button {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    font-size: 32px;
    color: #ffffff;
    background: linear-gradient(to right, #2664e4, #443acc);
    border-radius: 50%;
  }
}

.skill-item {
  width: 48.5%;
  display: flex;
  justify-content: center;
  background-color: #ffffff;

  .skill-item__wrapper {
    width: 93%;
    padding-top: 20px;
  }

  .skill-item__table {
    line-height: 32px;
  }
}


.edit-review__form {
  label {
    font-size: 16px;
    line-height: 30px;
    font-weight: 600;
    opacity: 0.5;
  }

}

.add-work {
  .add-work__title {
    margin-bottom: 52px;
  }
}

.edit-work {
  label {
    font-size: 16px;
    // line-height: 30px;
    font-weight: 600;
    opacity: 0.5;
  }
}

.edit-work {
